<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="product.filters" template="Snowdog_MagewireExamples::magewire/products/filters.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        \Snowdog\MagewireExamples\Magewire\Filters
                    </argument>
                </arguments>
            </block>
            <block name="product.listing" template="Snowdog_MagewireExamples::magewire/products/listing.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        \Snowdog\MagewireExamples\Magewire\ProductListing
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
